{
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.json", "*.md", "*.yml"],
      "options": {
        "useTabs": false
      }
    }
  ],
  "endOfLine": "lf",
  "bracketSpacing": true,
  "quoteProps": "as-needed",
  "arrowParens": "always"
}
